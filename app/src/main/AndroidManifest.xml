<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.educat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Notes.EditNoteActivity"></activity>
        <activity
            android:name=".Notes.NoteMainActivity"
            android:label="@string/title_activity_note_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Notes.NotesMainActivity" />
        <activity android:name=".Notes.Edit" />
        <activity
            android:name=".Notes.Details"
            android:label="@string/title_activity_details"
            android:parentActivityName=".Notes.NotesMainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.educat.Notes.NotesMainActivity" />
        </activity>
        <activity android:name=".Notes.AddNote">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Notes.NotesMainActivity" />
        </activity>
        <activity android:name=".SubCat" />
        <activity android:name=".ScoreDetail" />
        <activity android:name=".Done" />
        <activity android:name=".Playing" />
        <activity android:name=".Start" />
        <activity android:name=".Home" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>