<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.educat">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".RevisionGames.RevisionGameMenu"
            android:label="Educat revision games"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Revision.RevisionMainActivity"
            android:label="@string/title_activity_revision_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Notes.NoteMainActivity"
            android:label="Educat Notes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Notes.AddNotes" />
        <activity android:name=".RevisionGames.HardwareGame" />
        <activity android:name=".RevisionGames.ThreatsGame" />
        <activity android:name=".Notes.EditNotes" />
        <activity android:name=".Notes.NoteDetail" />
        <activity android:name=".SubCat" />
        <activity android:name=".ScoreDetail" />
        <activity android:name=".Done" />
        <activity android:name=".Playing" />
        <activity android:name=".Start" />
        <activity android:name=".Home" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>